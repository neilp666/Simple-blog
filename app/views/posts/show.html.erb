<div class="container">
<h1> Show posts </h1>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<h2>Comments</h2>
	<%= render @post.comments %>

<h2>Add a comment: </h2>
	<%= render "comments/form"%>

</div>

<div class="container">
<%= link_to 'Edit Post', edit_post_path(@post) %> |
<%= link_to 'Back to Posts', posts_path %>
</div>

